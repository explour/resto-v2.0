%html
	%head
		%title Resto v2.0
		= stylesheet_link_tag 'application', media: 'all'
		= javascript_include_tag 'application'
		= csrf_meta_tags
		%link{:href => 'https://fonts.googleapis.com/css?family=Ubuntu:700italic', :rel => 'stylesheet', :type => 'text/css'}
	%body
		.container
			%div.row#navbar
				.col-sm-8
					%a#logo{:href => "/restaurants"}resto v2.0
					- if current_user && current_user.admin?
						%a.admin_links{:href => '/restaurants/new'} Create new Restaurant
						%a.admin_links{:href => '/users/all'} Manage Users
				.col-sm-4
					-if current_user
						%a.session_buttons#logout{:href => '/users/sign_out', "data-method" => 'delete'} Logout
					-else
						%a.session_buttons#login{:href => '/users/sign_in'} Login
						%a.session_buttons#signup{:href => '/users/sign_up'} Sign Up
			.row#navbar_line
				.col-sm-12
					%hr

			=yield